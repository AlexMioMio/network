import("//third_party/mojo/src/mojo/public/mojo_application.gni")

if (is_android) {
# TODO(toshik)
} else {
  mojo_native_application("network") {
    output_name = "network_service"
    deps = [
      ":sources",
    ]
  }
  mojo_native_application("network_secure") {
    output_name = "network_service-secure"
    deps = [
